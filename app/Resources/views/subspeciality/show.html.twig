{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subspeciality</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subSpeciality.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subSpeciality.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{% if subSpeciality.duration %}{{ subSpeciality.duration|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subspeciality_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subspeciality_edit', { 'id': subSpeciality.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
