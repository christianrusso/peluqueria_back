{% extends 'base.html.twig' %}

{% block body %}
    <h1>Specialist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialist.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ specialist.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ specialist.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ specialist.email }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ specialist.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Consultationlength</th>
                <td>{{ specialist.consultationLength }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('specialist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('specialist_edit', { 'id': specialist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
